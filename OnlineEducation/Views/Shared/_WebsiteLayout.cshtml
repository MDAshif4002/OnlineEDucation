<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Learning Hub</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Sweet Alert Linking -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    <style>
        .menu 
        {
           box-shadow: 0 0 10px 0 gray;
           background-color:white;
           border: 1px solid white;
           position: sticky; 
           top: 0;
           z-index:1;
           padding-bottom: 10px;
        }
        .menu a
        {
            color: gray;
        }
    </style>
    @RenderSection("head", false)
</head>
<body>
    <div class="container-fluid">
    <div class="row menu">
        <div class="col-sm-12 p-0">
@*             <div class="container-fluid">
 *@                <nav class="navbar navbar-expand-lg bg-body-light">
                    <div class="container-fluid">
                        <h3 class="mt-2 me-5 ms-5 fs-4 text-center">Learning Hub</h3>
@*                         <a class="navbar-brand" href="#">Online Education</a>
 *@                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="About">About</a>
                                </li>
                               @*  <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Pages
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Courses</a></li>
                                        <li><a class="dropdown-item" href="#">Readers</a></li>
                                        <li><a class="dropdown-item" href="#">Facilities</a></li>
                                    </ul>
                                </li>  *@
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Courses">Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Reader" asp-controller="Website">Readers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Contacts" asp-controller="Website">Contacts</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Register" asp-controller="Website">Register</a>
                                </li>
                                @if(TempData["loginstatus"] != null)
                                {
                                   @if(TempData["loginstatus"].ToString() == "true")
                                   {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="Account" asp-controller="User">Account</a>
                                        </li>
                                   }
                                   else
                                   {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="Login" asp-controller="Website">Login</a>
                                        </li>
                                   }
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Login" asp-controller="Website">Login</a>
                                    </li>
                                }
                            </ul>
                            <form class="d-flex" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                </nav>
                </div>
    </div>
        <div class="row">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>
        <div class="row bg-secondary text-light">
            <div class="col-sm-4 text-center">
                <h3>About Us</h3>
                <p>Learning Hub is a Digital Learning Plateform</p>
            </div>
            <div class="col-sm-4 mb-1 text-center">
                <h3>Pages</h3>
                <a asp-action="Index" style="text-decoration:none;color:white;">Home</a><br />
            <a asp-action="About" style="text-decoration:none;color:white;">About</a><br />
            <a asp-action="Courses" style="text-decoration:none;color:white;">Courses</a><br />
            <a asp-action="Reader" style="text-decoration:none;color:white;">Readers</a><br />
            <a asp-action="Contacts" style="text-decoration:none;color:white;">Contacts</a><br />
            </div>
            <div class="col-sm-4 text-center">
                <h3>Our Social Media links</h3><br />
                <i class="fa-brands fa-google fs-4"></i>
                <i class="fa-brands fa-x-twitter fs-4 mx-1"></i>
                <i class="fa-brands fa-instagram fs-4 mx-1"></i>
                <i class="fa-brands fa-facebook fs-4 mx-1"></i>
                <i class="fa-brands fa-linkedin-in fs-3"></i>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 p-3 mt-1 text-bg-dark text-center">
               Copyright &copy; to Online Education
            </div>
        </div>
    </div>
    @RenderSection("script", false)
</body>
</html>
