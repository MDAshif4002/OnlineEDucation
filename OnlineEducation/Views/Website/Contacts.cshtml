@model OnlineEducation.Models.managecontact
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}
<div class="row mt-5 mb-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header text-center text-bg-primary"><h4>Contacts with Me</h4></div>
            <div class="card-body">
                <form method="post" asp-action="ManageContact">
                    <label>Name</label>
                    <input type="text" class="form-control" placeholder="Enter Your Name" asp-for="name" />
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Enter Your Email" asp-for="email" />
                    <label>Message</label>
                    <textarea class="form-control" cols="10" rows="5" placeholder="Enter Your Message" asp-for="message"></textarea>
                    <br />
                    <button class="btn btn-outline-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>