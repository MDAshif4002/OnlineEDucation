@{
    Layout = "_WebsiteLayout";
}
<style>
    .otp1
    {
        height:450px;
        margin-top:70px;
    }
    .input
    {
        border-radius:30px;
        margin-top:20px;
    }
    .btn
    {
        border-radius:30px;
        margin-left:450px;
    }
</style>

 <div class="row">
     <div class="col-sm-3"></div>
     <div class="col-sm-6 otp1">
         <form method="post" asp-action="RegOtp">
             <h3 class="text-center mt-5">Enter Your OTP[Send on OTP]</h3>
             <label>Enter Your OTP<span class="text-center">*</span></label>
             <input type="email" class="form-control input" name="otp" /><br />
             <button class="btn btn-primary">Register Now</button>
             <br />
             <p class="text-danger">@TempData["msg"]</p>
         </form>
     </div>
 </div>