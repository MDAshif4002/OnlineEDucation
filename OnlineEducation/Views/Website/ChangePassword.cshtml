@model OnlineEducation.Models.managechangepassword
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
    ViewBag.title = "Change Password";
}


<div class="row mt-5 mb-5">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header text-bg-primary text-center">
                <h3>Change Password</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ChangePassword">
                    <label>Enter Your Old Password</label>
                    <input type="password" asp-for="oldpassword" class="form-control" placeholder="Enter Your Old Password" />
                    <br />
                    <label>Enter Your New Password</label>
                    <input type="password" asp-for="newpassword" class="form-control" placeholder="Enter Your New Password" />
                    <br />
                    <label>Enter Your Confirm Password</label>
                    <input type="password" asp-for="confirmpassword" class="form-control" placeholder="Enter Your Confirm Password" />
                    <br />
                    <button class="btn btn-primary">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>