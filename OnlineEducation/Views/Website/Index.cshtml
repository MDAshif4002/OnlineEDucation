<!--slider start-->
<!--1-->
<div class="row">
    <div class="col-sm-12 mt-3 p-0">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">

            <div class="carousel-indicators">
                @{
                    int b = 0;
                }
                @foreach (var x in Model.slider)
                {
                    @if (b == 0)
                    {
                        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="@b" class="active" ></button>
                    }
                    else
                    {
                        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="@b" ></button>
                    }
                    b++;
                }
            </div>

            <div class="carousel-inner">
                @{
                    int a = 1;
                }
                @foreach (var x in Model.slider)
                {
                    @if (a == 1)
                    {
                        <div class="carousel-item active">
                            <img src="~/slider/@x.image" loading="eager" style="height:70vh;" class="d-block w-100" alt="Student event 1">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="~/slider/@x.image" loading="eager" style="height:70vh;" class="d-block w-100" alt="Student event 1">
                        </div>
                    }
                    a++;
                }

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
<!--slider end-->

<!--about start-->
<h1 class="text-center mt-5 mb-5">About</h1><hr class="ms-5 me-5" />
<div class="row">
