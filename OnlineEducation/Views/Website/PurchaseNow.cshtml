@model OnlineEducation.Models.register
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}

<div class="row mt-5 mb-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header text-center text-bg-primary">
                <h4>Purchase Course</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="PurchaseNow">
                    <label>Name</label>
                    <input type="text" class="form-control" placeholder="Enter Your Name..." name="name" value="@Model.name" />
                    <label>E-Mail</label>
                    <input type="email" class="form-control" placeholder="Enter Your Email..." name="email" value="@Model.email" />
                    <label>Mobile Number</label>
                    <input type="number" class="form-control" placeholder="Enter Your Mobile Number..." name="mobile" value="@Model.mobile" />
                    <label>City</label>
                    <input type="text" class="form-control" placeholder="Enter Your City..." name="city" value="@Model.city" />
                    <label>Pincode</label>
                    <input type="number" class="form-control" placeholder="Enter Your Pincode..." name="pincode" />
                    <label>Address</label>
                    <textarea class="form-control" placeholder="Enter Your Address..." name="address"></textarea>
                    <label>Payment Mode</label><br />
                    <input type="radio" name="paymentmode" value="cod" checked />COD(Cash on Delivery)<br />
                    <input type="radio" name="paymentmode" value="online" />Online
                    <br /><br />
                    <button class="btn btn-primary w-100"><b>Purchase Now</b></button>
                </form>
            </div>
        </div>
    </div>
</div>