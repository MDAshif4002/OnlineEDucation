@model IEnumerable<OnlineEducation.Models.reader>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
}

<h1>Manage Readers</h1>
<br />
<a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reader">Add New Reader</a>
<br />
<br />
<table class="table table-bordered table-hover text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Reader Picture</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sr = 1;
        }
        @foreach (var data in Model)
        {
            <tr>
                <td>@sr</td>
                <td><img src="~/ReaderPicture/@data.readerpic" style="height:100px;" /></td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteReader" asp-route-id="@data.id" asp-controller="Admin">Delete</a>
                </td>
            </tr>
            sr++;
        }
    </tbody>
</table>

<div class="modal fade" id="reader">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Reader</h4>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="ManageReader" enctype="multipart/form-data">
                    Upload Slider Image
                    <input type="file" name="readerpic" required class="form-control" />
                    <br />
                    <button class="btn btn-warning">Upload</button>
                </form>
            </div>
        </div>
    </div>
</div>